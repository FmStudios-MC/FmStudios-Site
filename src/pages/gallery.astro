---
import Layout from '../layouts/Layout.astro';
import Icon from '../components/Icon.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import { projects } from '../data/projects';

// Collect all screenshots with project names
const galleryItems = projects.flatMap((project) =>
  project.screenshots.map((src, i) => ({
    src,
    alt: `${project.name} - Screenshot ${i + 1}`,
    projectName: project.name,
    projectId: project.id,
  }))
);
---

<Layout title="Gallery - FabiMvurice Interactive">
  <section class="max-w-7xl mx-auto px-6 py-12">
    <!-- Header -->
    <ScrollReveal>
      <div class="text-center mb-10">
        <p class="text-xs font-semibold uppercase tracking-widest mb-2" style="color: var(--accent);">Screenshots</p>
        <h1 class="text-4xl font-black mb-3" style="color: var(--text-primary);">Gallery</h1>
        <p class="max-w-2xl mx-auto" style="color: var(--text-muted);">Screenshots and media from our projects.</p>
      </div>
    </ScrollReveal>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {galleryItems.map((item, i) => (
        <ScrollReveal delay={i * 60}>
          <div
            class="card overflow-hidden cursor-pointer gallery-item group"
            data-src={item.src}
            data-alt={item.alt}
          >
            <div class="aspect-video overflow-hidden">
              <img
                src={item.src}
                alt={item.alt}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                loading="lazy"
              />
            </div>
            <div class="p-3 flex items-center justify-between">
              <span class="text-xs font-medium" style="color: var(--text-muted);">{item.projectName}</span>
              <Icon name="image" size={14} class="opacity-50" />
            </div>
          </div>
        </ScrollReveal>
      ))}
    </div>

    {galleryItems.length === 0 && (
      <div class="text-center py-16">
        <div class="card p-12">
          <Icon name="image" size={48} class="mx-auto mb-4" style="color: var(--text-dim);" />
          <h3 class="text-xl font-bold mb-2" style="color: var(--text-primary);">No images yet</h3>
          <p style="color: var(--text-muted);">Check back soon for project screenshots.</p>
        </div>
      </div>
    )}
  </section>

  <!-- Lightbox -->
  <div
    id="gallery-lightbox"
    class="fixed inset-0 z-[60] hidden modal-overlay flex items-center justify-center p-4"
    role="dialog"
    aria-modal="true"
  >
    <div class="modal-content relative max-w-6xl flex items-center">
      <!-- Counter -->
      <span id="gallery-counter" class="absolute top-0 left-0 -translate-y-12 text-sm font-medium text-white/80"></span>
      <!-- Close -->
      <button id="gallery-lightbox-close" class="modal-close-btn absolute top-0 right-0 -translate-y-12">&times;</button>
      <!-- Prev -->
      <button id="gallery-prev" class="absolute left-0 -translate-x-14 max-md:translate-x-2 z-10 w-10 h-10 flex items-center justify-center rounded-full bg-black/50 text-white hover:bg-black/70 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
      </button>
      <!-- Image -->
      <img id="gallery-lightbox-img" src="" alt="" class="max-w-full max-h-[85vh]" />
      <!-- Next -->
      <button id="gallery-next" class="absolute right-0 translate-x-14 max-md:-translate-x-2 z-10 w-10 h-10 flex items-center justify-center rounded-full bg-black/50 text-white hover:bg-black/70 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
      </button>
    </div>
  </div>

  <script>
    const lightbox = document.getElementById('gallery-lightbox');
    const lightboxImg = document.getElementById('gallery-lightbox-img') as HTMLImageElement;
    const lightboxClose = document.getElementById('gallery-lightbox-close');
    const prevBtn = document.getElementById('gallery-prev');
    const nextBtn = document.getElementById('gallery-next');
    const counter = document.getElementById('gallery-counter');

    const galleryItems = Array.from(document.querySelectorAll('.gallery-item'));
    let currentIndex = 0;

    function showImage(index: number) {
      const item = galleryItems[index] as HTMLElement;
      if (!item || !lightboxImg) return;
      currentIndex = index;
      lightboxImg.src = item.dataset.src || '';
      lightboxImg.alt = item.dataset.alt || '';
      if (counter) counter.textContent = `${index + 1} of ${galleryItems.length}`;
      if (prevBtn) prevBtn.style.display = index === 0 ? 'none' : '';
      if (nextBtn) nextBtn.style.display = index === galleryItems.length - 1 ? 'none' : '';
    }

    galleryItems.forEach((item, i) => {
      item.addEventListener('click', () => {
        if (lightbox) {
          showImage(i);
          lightbox.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        }
      });
    });

    function closeLightbox() {
      lightbox?.classList.add('hidden');
      document.body.style.overflow = '';
    }

    prevBtn?.addEventListener('click', (e) => { e.stopPropagation(); showImage(currentIndex - 1); });
    nextBtn?.addEventListener('click', (e) => { e.stopPropagation(); showImage(currentIndex + 1); });
    lightboxClose?.addEventListener('click', closeLightbox);
    lightbox?.addEventListener('click', (e) => {
      if (e.target === lightbox) closeLightbox();
    });
    document.addEventListener('keydown', (e) => {
      if (!lightbox || lightbox.classList.contains('hidden')) return;
      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowLeft' && currentIndex > 0) showImage(currentIndex - 1);
      if (e.key === 'ArrowRight' && currentIndex < galleryItems.length - 1) showImage(currentIndex + 1);
    });
  </script>
</Layout>
