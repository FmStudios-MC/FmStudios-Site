---
import Layout from '../layouts/Layout.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import FAQItem from '../components/FAQItem.astro';
import { faqSections } from '../data/faq';
---

<Layout title="FAQ - FabiMvurice Interactive">
  <section class="max-w-3xl mx-auto px-6 py-12">
    <!-- Header -->
    <ScrollReveal>
      <div class="text-center mb-10">
        <p class="text-xs font-semibold uppercase tracking-widest mb-2" style="color: var(--accent);">Help</p>
        <h1 class="text-4xl font-black mb-3" style="color: var(--text-primary);">Frequently Asked Questions</h1>
        <p class="max-w-2xl mx-auto" style="color: var(--text-muted);">Find answers to common questions about our projects and modpacks.</p>
      </div>
    </ScrollReveal>

    {faqSections.map((section, si) => (
      <div class="mb-10">
        <ScrollReveal>
          <h2 class="text-xl font-bold mb-4" style="color: var(--text-primary);">{section.title}</h2>
        </ScrollReveal>
        <div class="space-y-3">
          {section.items.map((item, qi) => (
            <ScrollReveal delay={qi * 60}>
              <FAQItem question={item.question} answer={item.answer} id={`${si}-${qi}`} />
            </ScrollReveal>
          ))}
        </div>
      </div>
    ))}
  </section>
</Layout>
