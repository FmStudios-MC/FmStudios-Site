---
import Icon from './Icon.astro';
import { socialLinks } from '../data/social';
---

<footer class="border-t border-[var(--border-card)] mt-20 transition-colors duration-300" style="background-color: var(--bg-primary);">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="flex flex-col items-center text-center gap-6">
      <!-- Brand -->
      <div>
        <h3 class="text-xl font-bold" style="color: var(--text-primary);">FabiMvurice Interactive</h3>
        <p class="text-sm mt-1" style="color: var(--text-muted);">Crafting Minecraft experiences since 2023</p>
      </div>

      <!-- Social Links -->
      <div class="flex flex-wrap justify-center gap-3">
        {socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-4 py-2 text-sm font-medium border border-[var(--border-card)] hover:border-[var(--accent)] transition-all"
            style="color: var(--text-muted); background-color: var(--bg-card);"
            aria-label={`Visit ${link.name}`}
          >
            <Icon name={link.icon} size={16} />
            <span>{link.name}</span>
          </a>
        ))}
      </div>

      <!-- Bottom -->
      <div class="border-t border-[var(--border-card)] pt-6 w-full">
        <p class="text-sm" style="color: var(--text-dim);">2023-2026 FabiMvurice Interactive</p>
      </div>
    </div>
  </div>
</footer>
